---
import { type Experience } from '../types'

interface Props {
  experiences: Experience[]
}

const { experiences } = Astro.props
---

<ol>
  {experiences.map(experience => (
    <li>
      <h3>{ experience.company }</h3>
      <time>{ experience.time }</time>
      <p>{ experience.description.map((description, i) => {
        if (i % 2 === 0) return description
        return <mark>{ description }</mark>
      }) }</p>
    </li>
  ))}
</ol>

<style>
  ol {
    border-left: 1px solid hsla(var(--text-color) / 30%);
    padding-left: 1rem;
    padding-block: .5rem;
    gap: 1.5rem;
    display: flex;
    flex-direction: column;
  }

  ol h3 {
    font: var(--font-title);
    position: relative;
    font-size: 1.125rem;
    font-weight: 600;
  }

  ol h3::before {
    content: '';
    position: absolute;
    left: -1.55rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1.2rem;
    height: 1.2rem;
